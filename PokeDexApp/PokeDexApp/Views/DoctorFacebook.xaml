<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeDexApp.Views.DoctorFacebook">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Picture.Data.Url}" 
                   HeightRequest="100"
                   WidthRequest="100"
                   />
            <Label Text="{Binding Name}"/>
            <Label Text="{Binding Birthday}"/>
            <Label Text="{Binding Email}" />
            <Button Text="View Post"
                    Clicked="ButtonViewPost_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>